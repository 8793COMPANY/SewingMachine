<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.corporation8793.sewingmachine">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:requestLegacyExternalStorage="true"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SewingMachine">
        <activity
            android:theme="@style/Theme.SewingMachine.old"
            android:name="com.corporation8793.sewingmachine.StartEmbroidActivity"/>
        <activity android:name="com.corporation8793.sewingmachine.MainActivity">
        </activity>
        <activity android:name="com.corporation8793.sewingmachine.DeviceListActivity" />
        <activity android:name="com.corporation8793.sewingmachine.LoginActivity">

        </activity>
        <activity android:name="com.corporation8793.sewingmachine.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.corporation8793.sewingmachine.EmbroideryActivity" />
        <activity android:name="com.corporation8793.sewingmachine.CreateActivity" />
        <activity android:name="com.corporation8793.sewingmachine.SewingActivity" />
        <activity android:name="com.corporation8793.sewingmachine.SettingActivity" />
    </application>

</manifest>