<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/factory_reset_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="64"
        android:layout_marginBottom="30dp"
        android:gravity="bottom"
        android:weightSum="500">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="46"/>

        <LinearLayout
            android:id="@+id/fr_cancle"
            android:layout_width="0dp"
            android:layout_weight="190"
            android:layout_height="wrap_content"
            android:background="@drawable/factory_reset_cancle" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28"/>

        <LinearLayout
            android:id="@+id/fr_ok"
            android:layout_width="0dp"
            android:layout_weight="190"
            android:layout_height="wrap_content"
            android:background="@drawable/factory_reset_ok" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="46"/>

    </LinearLayout>

</LinearLayout>